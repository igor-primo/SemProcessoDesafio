          "200": {
            "description": "Sucesso ao construir lista de viagens.",
            "schema": {
              "$ref": "#/definitions/travelList"
            }
          },
          "500": {
            "description": "Erro interno de sistema.",
            "schema": {
              "$ref": "#/definitions/internalErrorMsg"
            }
          }
        }
      },

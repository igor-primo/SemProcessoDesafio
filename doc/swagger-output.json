          {
            "name": "Authorization",
            "in": "header",
            "description": "Token de autenticação",
            "required": true,
            "type": "string"
          },
          {
            "name": "object",
            "in": "body",
            "description": "Objeto contendo _id da viagem e o seu estado atual, se agendado ou não (scheduled).",
